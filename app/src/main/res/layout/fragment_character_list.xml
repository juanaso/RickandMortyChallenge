<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".charaterlist.ui.CharacterListFragment">

        <androidx.appcompat.widget.SearchView
                android:id="@+id/homeCharacterSearchView"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/custom_background_searchview"
                android:layout_margin="16dp"
                app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/homeCharacterRecycler"
                android:layout_width="match_parent"
                android:paddingTop="20dp"
                android:clipToPadding="false"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/homeCharacterSearchView" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
